{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/handler.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/handler.py"
    },
    {
      "src": "/api/chat",
      "dest": "/api/handler.py"
    },
    {
      "src": "/api",
      "dest": "/api/handler.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/handler.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "functions": {
    "api/handler.py": {
      "maxDuration": 30
    }
  }
}
